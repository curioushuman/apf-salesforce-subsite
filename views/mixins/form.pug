    input.form__element(type='range', name=id, data-parsley-required=required, data-parsley-class-handler='.form__row--'+id, data-parsley-errors-container='.form-feedback--'+id, data-parsley-error-message=error, value=value, min=min, max=max, step=step, data-orientation=orientation)
