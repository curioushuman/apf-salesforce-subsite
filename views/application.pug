extends layout
include mixins/form

block css
  link(rel='stylesheet', href='/css/lib/rangeslider.css')

block content
  .row(ng-controller='applicationCtrl')
      .cell-form

        if renderForm
          form.form(method='post', action='/')

            .form__row
              h1 This is the header

            - var error_required = 'This field is required'
            +form_email('Contact___Email', 'Email', 'true', 'Enter a valid email', '')
            button.btn.btn--primary.btn--submit(type='submit') Find my details

            .alert.alert-success(role="alert") blah

            +form_text('Contact___LastName', 'Surname / family name', 'true', error_required, '')
            +form_text('Contact___FirstName', 'First name / preferred name', 'true', error_required, '')
            +form_radios('Contact___Gender__c', 'Gender / gender identity', 'true', error_required, gender_options)
            +form_textarea('Contact___Dietary_requirements__c', 'Dietary requirements', 'true', error_required, '')
            +form_textarea('Contact___Accessibility_requirements__c', 'Accessibility requirements', 'true', error_required, '')
            +form_select('test', 'THis is a test select', 'true', 'Select one option from the available', {})
            +form_range('woot', 'Woot range', 'true', error_required, 1, 1, 5, 1, 'horizontal')

            .form__row
              input.formSpeedConnection(type='hidden', name='speed')
              input.formTechOs(type='hidden', name='os')
              input.formTechBrowser(type='hidden', name='browser')
              input.formTechResolution(type='hidden', name='resolution')
              input.formTechCountry(type='hidden', name='country')
              button.btn.btn--primary.btn--submit(type='submit') Submit

      .cell-module
        .card
          h2 Language
          #google_translate_element
          script(type='text/javascript').
            function googleTranslateElementInit() {
            new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'en,ar,id,ko,ru,zh-CN', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
            }
          script(type='text/javascript', src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit')
        .card
          h2 Speed
          h3.speedConnection ---
        .card
          h2 Technology
          ul
            li.techOs ---
            li.techBrowser ---
            li.techResolution --- x ---
            li.techCountry ---

block js
  script(src='/js/lib/rangeslider.min.js')
  script(src='https://code.angularjs.org/1.4.5/angular.min.js')
  script(src='/js/application.js')
